# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/maestromind

# Server Configuration
PORT=5000
NODE_ENV=development

# LLM Provider API Keys
# Groq - Primary provider (https://console.groq.com)
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# Google Gemini - Preferred for complex reasoning (https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here
# Available models:
# - gemini-2.5-pro (Complex reasoning - latest model)
# - gemini-1.5-flash (Standard tasks)
# - gemini-1.5-flash-8b (Lightweight tasks)
GEMINI_MODEL=gemini-2.5-pro

# Perplexity - For research and real-time information (https://www.perplexity.ai)
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_MODEL=llama-3.1-sonar-large-128k-online

# Ollama - Local provider (https://ollama.ai) - Optional, only used when explicitly requested
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Optional: Alternative key names supported
# GROQ_KEY=gsk_your_groq_api_key_here
# GOOGLE_API_KEY=your_google_api_key_here